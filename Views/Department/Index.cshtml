@using MvcOnlineTricariOtomasyon.Models.Classes
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>DEPARTMAN</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.DepartmentId</td>
            <td>@d.DepartmentName</td>
            <td><a href="/Department/BringDepartment/@d.DepartmentId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Department/DeleteDepartment/@d.DepartmentId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Department/DetailDepartment/@d.DepartmentId" class="btn btn-info">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Department/AddDepartment/" class="btn btn-primary">Departman Ekle</a>