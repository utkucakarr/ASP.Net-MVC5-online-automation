@model IEnumerable<MvcOnlineTricariOtomasyon.Models.Classes.GroupClass>
@{
    ViewBag.Title = "SimpleTables";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Simple Tables</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Web/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Web/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Hızlı Bakış Tabloları</h1>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        @Html.Action("PartialCategory", "Statistic")
                        @Html.Action("PartialSimpleTables", "Statistic")
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Müşteri Şehir Tablosu</h3>
                                <div class="card-tools">

                                </div>
                            </div>
                            <div class="card-body p-0">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Şehir</th>
                                            <th>Progress Bar</th>
                                            <th style="width: 40px">Adet</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int queuenumber = 0;}
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@{queuenumber++;} @queuenumber</td>
                                                <td>@x.City</td>
                                                <td>
                                                    @if (x.NumberOfCities == 1)
                                                    {
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                                        </div>
                                                    }
                                                    @if (x.NumberOfCities == 2)
                                                    {
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar bg-warning" style="width: 70%"></div>
                                                        </div>
                                                    }
                                                    @if (x.NumberOfCities == 3)
                                                    {
                                                        <div class="progress progress-xs progress-striped active">
                                                            <div class="progress-bar bg-success" style="width: 90%"></div>
                                                        </div>
                                                    }
                                                </td>
                                                <td>
                                                    @if (x.NumberOfCities == 1)
                                                    {
                                                        <span class="badge bg-danger">@x.NumberOfCities</span>
                                                    }
                                                    @if (x.NumberOfCities == 2)
                                                    {
                                                        <span class="badge bg-yellow">@x.NumberOfCities</span>
                                                    }
                                                    @if (x.NumberOfCities == 3)
                                                    {
                                                        <span class="badge bg-green">@x.NumberOfCities</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @Html.Action("PartialForBrand", "Statistic")
                    </div>
                </div>
                @Html.Action("PartialCurrent", "Statistic")
                @Html.Action("PartialProduct", "Statistic")
            </div>
        </section>
    </div>
    <aside class="control-sidebar control-sidebar-dark">
    </aside>
    <script src="~/Web/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/Web/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Web/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <script src="~/Web/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>
