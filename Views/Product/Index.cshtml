@using MvcOnlineTricariOtomasyon.Models.Classes
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
   <p>
       Ürün Adı: @Html.TextBox("Search")
       <input type="submit" value="Ara"/>
   </p>
}
<br />
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ProductName</td>
            <td>@p.Brand</td>
            <td>@p.Stock</td>
            <td>@p.PurchasePrice ₺</td>
            <td>@p.SalesPrice ₺</td>
            <td>@p.Category.CategoryName</td>
            <td style="text-align:center; align-content:center"><img src="@p.ProductImage" alt="Image" class="img-fluid center" style="height: 36px; width: 36px;"></td>
            <td><a href="/Product/BringProduct/@p.ProductId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Product/DeleteProduct/@p.ProductId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/MakeSales/@p.ProductId" class="btn btn-default" style="background-color:#808080; color:white">Satış Yap</a></td>
        </tr>
    }
</table>
<br />
<a href="/Product/AddProduct/" class="btn btn-primary">Ürün Ekle</a>